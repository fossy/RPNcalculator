<resources>
    <style name="button_style">
       <item name="android:textSize">40dp</item>
       <item name="android:textColor">#ffffffff</item>
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">fill_parent</item>
       <item name="android:layout_weight">1</item>
       <item name="android:focusable">true</item>
       <item name="android:background">@drawable/button</item>
       <item name="android:layout_marginLeft">1dp</item>
       <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="button_verysmall_style" parent="button_style">
       <item name="android:textSize">20dp</item>
    </style>

    <style name="button_small_style" parent="button_style">
       <item name="android:textSize">30dp</item>
    </style>

    <style name="digit_button_style" parent="button_style">
       <item name="android:background">@drawable/digit_button</item>
    </style>

    <style name="indicator_style">
       <item name="android:textSize">10dp</item>
       <item name="android:gravity">left|top</item>
       <item name="android:textColor">#ffffff</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:paddingRight">10dp</item>
    </style>
    
    <style name="kbon_style" parent="indicator_style">
		<item name="android:gravity">center_horizontal|top</item>
       	<item name="android:paddingRight">1dp</item>
    </style>
    
    <style name="kboff_style" parent="kbon_style">
       	<!--  <item name="android:background">#404040</item> -->
       	<item name="android:textColor">#bfbfbf</item>
    </style>
    
    <style name="display_style">
       <item name="android:textSize">36dp</item> <!-- 40dp -->
       <!-- <item name="android:gravity">right|center_vertical</item> -->
       <item name="android:gravity">right|top</item>
       <item name="android:textColor">#ffffff</item>
       <item name="android:maxLines">1</item>
       <item name="android:focusable">true</item>
       <!-- <item name="android:focusableInTouchMode">true</item> -->
       <item name="android:scrollbars">none</item>
       <item name="android:scrollHorizontally">true</item>
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">fill_parent</item>
       <!--   <item name="android:padding">8dp</item>-->
    </style>

    <style name="option_value_style">
       <item name="android:textSize">18dp</item> <!-- 40dp -->
       <item name="android:gravity">right|center_vertical</item>
       <!--  <item name="android:gravity">right|top</item>  -->
       <!-- <item name="android:textColor">#ffffff</item> -->
       <!-- <item name="android:maxLines">1</item> -->
       <!-- <item name="android:focusable">true</item> -->
       <!-- <item name="android:focusableInTouchMode">true</item> -->
       <item name="android:scrollbars">none</item>
       <!-- <item name="android:scrollHorizontally">true</item> -->
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <!--   <item name="android:padding">8dp</item>-->
    </style>
</resources>
